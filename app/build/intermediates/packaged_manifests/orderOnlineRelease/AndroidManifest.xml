<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.atlas.orianofood.orderonline"
    android:versionCode="3"
    android:versionName="1.3" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="30" />
    <!-- Include required permissions for Google Mobile Ads to run. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.atlas.orianofood.core.App"
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true" >
        <activity android:name="com.atlas.orianofood.mvvm.activity.EmptyCart" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" /> <!-- MVVM -->
        <activity
            android:name="com.atlas.orianofood.mvvm.activity.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarAppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.atlas.orianofood.mvvm.activity.HomeSPActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name="com.atlas.orianofood.mvvm.activity.GallerySPActivity"
            android:label="@string/title_activity_gallery"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name="com.atlas.orianofood.mvvm.activity.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name="com.atlas.orianofood.mvvm.activity.RegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name="com.atlas.orianofood.mvvm.activity.TermsAndCondition"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name="com.atlas.orianofood.mvvm.activity.PrivacyPolicyActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name="com.atlas.orianofood.mvvm.activity.CategorySPActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name="com.atlas.orianofood.mvvm.activity.ProductSPActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name="com.atlas.orianofood.mvvm.activity.MyCartSpActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarAppTheme" /> <!-- FireBase RT -->
        <activity
            android:name="com.atlas.orianofood.firebaseRT.activity.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarAppTheme" >

            <!--
             <intent-filter>
                 <action android:name="android.intent.action.MAIN" />
                 <category android:name="android.intent.category.LAUNCHER" />
             </intent-filter>
            -->
        </activity>
        <activity
            android:name="com.atlas.orianofood.firebaseRT.activity.SubscriptionActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name="com.atlas.orianofood.firebaseRT.activity.SignInActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name="com.atlas.orianofood.firebaseRT.activity.SignUpActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name="com.atlas.orianofood.firebaseRT.activity.ResetPasswordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name="com.atlas.orianofood.firebaseRT.activity.ProfileActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name="com.atlas.orianofood.firebaseRT.activity.MyAddressesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name="com.atlas.orianofood.firebaseRT.activity.AddAddressActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name="com.atlas.orianofood.firebaseRT.activity.OrdersActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name="com.atlas.orianofood.firebaseRT.activity.ChangePasswordActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name="com.atlas.orianofood.firebaseRT.activity.UpdateEmailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name="com.atlas.orianofood.firebaseRT.activity.VerifyPhoneAuthActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name="com.atlas.orianofood.firebaseRT.activity.VerifyPhoneActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name="com.atlas.orianofood.firebaseRT.activity.GalleryActivity"
            android:label="@string/title_activity_gallery"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name="com.atlas.orianofood.firebaseRT.activity.HomeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name="com.atlas.orianofood.firebaseRT.activity.CategoryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name="com.atlas.orianofood.firebaseRT.activity.ProductCategoryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name="com.atlas.orianofood.firebaseRT.activity.ProductActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name="com.atlas.orianofood.firebaseRT.activity.CartActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name="com.atlas.orianofood.firebaseRT.activity.AuthActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarAppTheme" />

        <receiver android:name="com.atlas.orianofood.mvvm.reciver.StateChangeReciver" >
            <intent-filter android:priority="10000" >
                <action android:name="com.atlas.orianofood.CHANGED" />
            </intent-filter>
        </receiver>

        <provider
            android:name="com.squareup.picasso.PicassoProvider"
            android:authorities="com.atlas.orianofood.orderonline.com.squareup.picasso"
            android:exported="false" />

        <service
            android:name="com.google.firebase.components.ComponentDiscoveryService"
            android:directBootAware="true"
            android:exported="false" >
            <meta-data
                android:name="com.google.firebase.components:com.google.firebase.database.ktx.FirebaseDatabaseKtxRegistrar"
                android:value="com.google.firebase.components.ComponentRegistrar" />
            <meta-data
                android:name="com.google.firebase.components:com.google.firebase.database.DatabaseRegistrar"
                android:value="com.google.firebase.components.ComponentRegistrar" />
            <meta-data
                android:name="com.google.firebase.components:com.google.firebase.auth.ktx.FirebaseAuthKtxRegistrar"
                android:value="com.google.firebase.components.ComponentRegistrar" />
            <meta-data
                android:name="com.google.firebase.components:com.google.firebase.auth.FirebaseAuthRegistrar"
                android:value="com.google.firebase.components.ComponentRegistrar" />
            <meta-data
                android:name="com.google.firebase.components:com.google.firebase.ktx.FirebaseCommonKtxRegistrar"
                android:value="com.google.firebase.components.ComponentRegistrar" />
        </service>

        <provider
            android:name="androidx.lifecycle.ProcessLifecycleOwnerInitializer"
            android:authorities="com.atlas.orianofood.orderonline.lifecycle-process"
            android:exported="false"
            android:multiprocess="true" />

        <receiver android:name="com.razorpay.RzpTokenReceiver" >
            <intent-filter>
                <action android:name="rzp.device_token.share" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.razorpay.CheckoutActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:theme="@style/CheckoutTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <data
                    android:host="rzp.io"
                    android:scheme="io.rzp" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.google.android.gms.auth.api.signin.internal.SignInHubActivity"
            android:excludeFromRecents="true"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <!--
            Service handling Google Sign-In user revocation. For apps that do not integrate with
            Google Sign-In, this service will never be started.
        -->
        <service
            android:name="com.google.android.gms.auth.api.signin.RevocationBoundService"
            android:exported="true"
            android:permission="com.google.android.gms.auth.api.signin.permission.REVOCATION_NOTIFICATION"
            android:visibleToInstantApps="true" />

        <activity
            android:name="com.google.firebase.auth.internal.GenericIdpActivity"
            android:excludeFromRecents="true"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="firebase.auth"
                    android:path="/"
                    android:scheme="genericidp" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.google.firebase.auth.internal.RecaptchaActivity"
            android:excludeFromRecents="true"
            android:exported="true"
            android:launchMode="singleTask"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="firebase.auth"
                    android:path="/"
                    android:scheme="recaptcha" />
            </intent-filter>
        </activity>

        <service
            android:name="com.google.firebase.auth.api.fallback.service.FirebaseAuthFallbackService"
            android:enabled="true"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.google.firebase.auth.api.gms.service.START" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </service>

        <activity
            android:name="com.google.android.gms.common.api.GoogleApiActivity"
            android:exported="false"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <provider
            android:name="com.google.firebase.provider.FirebaseInitProvider"
            android:authorities="com.atlas.orianofood.orderonline.firebaseinitprovider"
            android:directBootAware="true"
            android:exported="false"
            android:initOrder="100" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <service
            android:name="androidx.room.MultiInstanceInvalidationService"
            android:directBootAware="true"
            android:exported="false" />
    </application>

</manifest>