<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Include required permissions for Google Mobile Ads to run. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.atlas.orianofood.activity.GalleryActivity"
            android:label="@string/title_activity_gallery"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="com.atlas.orianofood.activity.MainActivity"
            android:label="@string/title_activity_main" /> <!-- Include the AdActivity configChanges and theme. -->
        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
            android:theme="@android:style/Theme.Translucent" />
        <activity
            android:name="com.atlas.orianofood.activity.SplashActivity"
            android:theme="@style/NoActionBarAppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.atlas.orianofood.activity.LoginActivity"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name="com.atlas.orianofood.activity.RegisterActivity"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name="com.atlas.orianofood.activity.HomeActivity"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name="com.atlas.orianofood.activity.CategoryActivity"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name="com.atlas.orianofood.activity.ProductCategoryActivity"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name="com.atlas.orianofood.activity.ProductActivity"
            android:theme="@style/NoActionBarAppTheme" />
        <activity
            android:name="com.atlas.orianofood.activity.CartActivity"
            android:theme="@style/NoActionBarAppTheme" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="@string/admob_app_id" />
    </application>

</manifest>