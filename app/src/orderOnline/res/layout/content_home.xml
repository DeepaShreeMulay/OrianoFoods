<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/constraintLayout"
    android:layout_marginTop="?attr/actionBarSize"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_home">


    <!-- set Banner ad position in UI layout design -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Top selling"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/constraintLayout"
            app:layout_constraintStart_toStartOf="@+id/constraintLayout"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/topSellingRecyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scrollbars="horizontal" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="2dp"
            android:background="@color/cardview_shadow_end_color"
            android:tooltipText="space for ads"
            app:adSize="BANNER"
            app:adUnitId="@string/admob_banner_id_1"
            app:layout_constraintBottom_toBottomOf="@+id/topSellingRecyclerview"
            app:layout_constraintEnd_toEndOf="@+id/topSellingRecyclerview"
            app:layout_constraintStart_toStartOf="@+id/topSellingRecyclerview"
            app:layout_constraintTop_toTopOf="@+id/adView1" />


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/adView1"
            app:layout_constraintEnd_toEndOf="@+id/adView1"
            app:layout_constraintStart_toStartOf="@+id/adView1"
            app:layout_constraintTop_toTopOf="@+id/recyclerview" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="2dp"
            android:background="@color/cardview_shadow_end_color"
            app:adSize="BANNER"
            app:adUnitId="@string/admob_banner_id_2"
            app:layout_constraintBottom_toBottomOf="@+id/adView2"
            app:layout_constraintEnd_toEndOf="@+id/adView2"
            app:layout_constraintStart_toStartOf="@+id/adView2"
            app:layout_constraintTop_toTopOf="@+id/textView2" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>