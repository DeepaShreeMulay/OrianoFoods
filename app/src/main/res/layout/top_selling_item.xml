<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="item"
            type="com.atlas.orianofood.mvvm.topRatedSelling.model.SellingItem" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:background="@color/colorPrimary"
        android:foregroundGravity="center_horizontal"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/productName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:maxLines="2"
                    android:paddingLeft="3dp"
                    android:textColor="@color/accent"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="PIZZA 01"
                    app:text="@{item.productName}"/>

                <RelativeLayout
                    android:id="@+id/llContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/productName">

                    <TextView
                        android:id="@+id/productRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="center_horizontal"
                        android:padding="1dp"
                        android:textAlignment="center"
                        android:textColor="@color/accent"
                        android:textSize="12sp"
                        tools:text="0"
                        android:layout_marginLeft="5dp"
                        app:text="@{item.price}"/>

                    <TextView
                        android:id="@+id/productSellingprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_toRightOf="@+id/productRate"
                        android:gravity="center_horizontal"
                        android:padding="1dp"
                        android:textAlignment="center"
                        android:textColor="@color/accent"
                        android:textSize="12sp"
                        tools:text="100"
                        android:layout_marginLeft="5dp"
                        app:text="@{item.sellingPrice}" />
                </RelativeLayout>

                <Button
                    android:id="@+id/btn_add"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_above="@id/ll"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@color/primary"
                    android:text="Add"
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/btn_number"
                    android:layout_width="60dp"
                    android:layout_height="20dp"
                    android:layout_above="@+id/ll"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="5dp"
                    android:visibility="gone"
                    app:backGroundColor="@color/colorPrimary"
                    app:backgroundDrawable="@color/colorPrimary"
                    app:finalNumber="10"
                    app:initialNumber="1"
                    app:textColor="@android:color/white"


                    />

                <!--&lt;!&ndash;<com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/btn_number"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_above="@+id/ll"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    app:backGroundColor="@color/colorPrimary"
                    app:backgroundDrawable="@color/colorPrimary"
                    app:finalNumber="10"
                    app:initialNumber="1"
                    app:textColor="@android:color/white"
                    app:textSize="8sp">&ndash;&gt;

                </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>-->

                <LinearLayout
                    android:id="@+id/ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal">

                    <me.zhanghai.android.materialratingbar.MaterialRatingBar
                        style="@style/Widget.MaterialRatingBar.RatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="11dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="5dp"
                        android:numStars="5"
                        android:rating="3.5"
                        app:mrb_progressBackgroundTint="@color/colorPrimaryDark"
                        app:mrb_progressTint="@color/colorPrimary"
                        app:mrb_secondaryProgressTint="@color/colorPrimaryDark" />

                    <TextView
                        android:id="@+id/votes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:gravity="left"
                        android:text="328 votes"
                        android:textColor="@color/colorAccent"
                        android:textSize="10sp"
                        android:layout_marginLeft="5dp"
                        app:text="@{item.rating}"/>

                </LinearLayout>
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_icon"
                android:layout_width="15dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/sale_tag"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_alignParentBottom="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_sale_tag"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/foodmark"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_veg" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/img_cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginBottom="3dp"
                android:background="@color/accent"
                android:foregroundGravity="center"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/categoryImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    app:srcCompat="@mipmap/bg_home"
                    app:image_url="@{item.imageUrl}" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</layout>